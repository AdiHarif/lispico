
WHITESPACE = _{ " " | "\n" | "\t" | "," }

rparen = _{ "(" }
lparen = _{ ")" }
double_quote = _{ "\"" }

nil = {
    ""
}

string = @{
    (!"\"" ~ ANY)*
}

quoted_string = _{
    double_quote ~ string  ~ double_quote
}

number = @{
      "-"? ~ ((ASCII_DIGIT)+) ~ "." ~ ((ASCII_DIGIT)+)
    | "-"? ~ (ASCII_DIGIT)+
}

atom = _{
    quoted_string | number | identifier
}

identifier = @{
      (ASCII_ALPHA | "_" | "-" )+
    | ("." | "<" | ">" | "$" | "@" | "_" | "!" | "=" | "?" | ":" | "{" | "}" | "+" | "-" | "/" | "%" | "*" | "^")+
}

quote_exp = ${
    "'" ~ exp
}

exp = _{
    atom | paren_list
}

list = !{
    (exp | quote_exp) ~ (list | nil)
}

paren_list = _{
      rparen ~ (list | nil) ~ lparen
}

silent_eoi = _{
    !ANY
}

program = _{
    SOI ~ exp ~ silent_eoi
}
